<% @users.each do |user| %>
  <%= cl_image_tag user.profile.image.key, :width=>50, :crop=>"fill", :default_image => "placeholder-icon_vcawzm.png" unless user == @current_user %>
  <%= user.username unless user == @current_user %>
  
  <% unless user.friends?(@current_user) || user == @current_user || user.friend_requested?(@current_user) %>
    <%= link_to "Send Friend Request", user_friend_requests_path(user, :friend_request => { :sender_id => current_user.id, :receiver_id => user.id, :received => true }), data: { turbo_method: "post" } %>
  <% end %>

  <% if user.friend_requested?(@current_user) %>
    <%= link_to "Delete Friend Request", user_friend_request_path(:user_id => @current_user.id, :id => user.id), data: { turbo_method: :delete } %>
  <% end %>
<% end %>